@model CreateOrderModel

@{
    ViewData["Title"] = "Home Page";
    int Delay = 5000;
}

<script>
    function redirectAfterPause(url, delay) {
        setTimeout(function () {
            window.location.href = url;
        }, delay);
    }

    window.onload = function () {
        redirectAfterPause("/", @Delay);
    };
</script>


<div class="text-center">
    <div>
        <h3>Thanks for order! You will be redirected back in @(Delay / 1000) seconds!</h3>
    </div>
</div>
